<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/text_separation"
    >

    <TextView
        android:id="@+id/selected_group_description_title_textview"
        android:text="Description"
        android:textSize="@dimen/large_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingTop="16dp"
        android:id="@+id/selected_group_description"
        android:text="Here's the description of the group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selected_group_description_title_textview"/>

    <Button
        android:id="@+id/selected_group_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selected_group_edit_button_text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>



</RelativeLayout>